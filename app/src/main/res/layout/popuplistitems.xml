<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="5dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


       android:layout_below="@+id/relativeLayout2"

        android:orientation="horizontal"

        android:id="@+id/linearLayout2">

        <EditText
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
          android:id="@+id/etreason"
            android:padding = "8dp"
            android:maxLines="5"
            android:textColorHint="#01799E"
            android:hint = "Reason"
            />



    </LinearLayout>

    <LinearLayout
        android:id = "@+id/relativeLayout1"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:background="#53b1ce"
        android:layout_below="@+id/tvreason"
        android:orientation="horizontal">
        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "8dp"
            android:textColor="#ffff"
            android:text = "Actual Qty"
            />
        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "8dp"
            android:textColor="#ffff"
            android:text = "Revised Qty"
            />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "8dp"
            android:textColor="#ffff"
            android:text = "Return  Qty"
            />



    </LinearLayout>

    <LinearLayout
        android:id = "@+id/relativeLayout2"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:background="#d4d1d1"
        android:layout_below="@+id/relativeLayout1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvactual"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "8dp"
            android:textColor="#ffff"
            android:text = "6"
            />

        <EditText
            android:id="@+id/etactual"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "8dp"
            android:maxLength="3"
            android:inputType="number"
            android:textColor="#ffff"
            android:text = "0"
            />

        <TextView
            android:id="@+id/tvreturns"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "8dp"
            android:textColor="#ffff"
            android:text = "0"
            />



    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:gravity="center"
        android:id="@+id/btnok"
        android:background="#01799E"
        android:textColor="#ffff"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignRight="@+id/tvreason"
        android:layout_alignEnd="@+id/tvreason"
        android:layout_marginRight="108dp"
        android:layout_marginEnd="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnok"

        android:padding="10dp"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/validmsg"

        android:layout_marginLeft="10dp"
        />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvreason"
            android:text=""

            android:backgroundTint="#FFFFFF"

            android:padding="10dp"

            android:maxLines="5"
            android:textSize="20dp"
            android:drawablePadding="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="8dp"

        android:paddingBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>


