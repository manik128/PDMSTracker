<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_messagebox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.atss.admin.concealtracking.messagebox">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PDMS Tracker application  helps you in your bussiness development Using this tracking software you can find out your employee current location with the help of GPS and Internet Support \n   "
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:id="@+id/tit"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tit"

        android:gravity="center"
        android:id="@+id/link"
        android:textColor="#0B0080"
        android:layout_marginBottom="10dp"

        />
    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
         android:layout_below="@+id/tit"
        android:lines="5"
        android:hint="Write something........"
        android:layout_marginTop="14dp"
        android:id="@+id/msgbox"
        android:background="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
      /> !-->
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/link"
        android:layout_centerInParent="true"
        >
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interested In it"

        android:gravity="center"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For more Info Visit Us"

            android:gravity="center"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Any assistance"

            android:gravity="center"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="22dp"
        android:theme="@style/MyButton"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/msgsub"
        android:elevation="80dp"
       android:layout_below="@+id/radioGroup1"

        />
</RelativeLayout>
