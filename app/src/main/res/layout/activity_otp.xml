<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.atss.admin.concealtracking.Otp">


    <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/enquiry"
         android:text="One time password sent to"
         android:gravity="center"
        android:id="@+id/tit"
         android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enquiry"
        android:text="ENTER OTP"
        android:textStyle="bold"
        android:textColor="#038B73"
        android:textSize="20dp"
        android:gravity="center"

        android:layout_above="@+id/ll1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resendtext"
        android:text="Not Recieved Otp?"



        android:textColor="#000000"
        android:textSize="15dp"


        />

    <TextView
        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resend"
                android:text="@string/resend"
android:layout_marginLeft="5dp"
        android:textStyle="bold"
                android:textColor="#038B73"
                android:textSize="15dp"


        android:layout_alignBaseline="@+id/resendtext"
        android:layout_alignBottom="@+id/resendtext"
        android:layout_toRightOf="@+id/resendtext"
        android:layout_toEndOf="@+id/resendtext" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="22dp"
        android:theme="@style/MyButton"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/verify"
        android:elevation="80dp"

        android:layout_below="@+id/ll1"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:gravity="center"
        android:id="@+id/ll1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">










            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="1"
                android:layout_gravity="center"
                android:backgroundTint="#038B73"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:id="@+id/ot"
                android:textStyle="bold"
                android:maxLength="1"


                />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="1"
            android:layout_gravity="center"
            android:backgroundTint="#038B73"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:id="@+id/ot1"
              android:maxLength="1"
                  android:textStyle="bold"


            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="1"
            android:layout_gravity="center"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:id="@+id/ot2"
            android:textStyle="bold"
             android:maxLength="1"


            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="1"

            android:layout_gravity="center"
            android:backgroundTint="#038B73"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:id="@+id/ot3"
            android:textStyle="bold"
              android:maxLength="1"


            />


    </LinearLayout>
</RelativeLayout>
